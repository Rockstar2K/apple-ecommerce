  <body>

    <header>
      <nav class="navbar">
          <div class="container">
            <a href="/">
              <img src="/public/assets/logo.png" alt="Logo" class="logo">
            </a>            
            <div class="navbar-menu">
              <a id="managerLink" class="nav-link" href="/products">Manager</a>
              <a class="nav-link" href="/users/register">Register</a>
              <a id="profileLink" class="nav-link" href="/users/:uid">My Profile</a>
              <a class="nav-link" href="/users/login">Login</a>
            </div>
          </div>
        </nav>
    </header>

    <main class="pb-4 mt-2">{{{body}}} </main>
    <footer class="bg-body-tertiary text-center mt-5">
      <div class="text-center p-3 fixed-bottom w-100 bg-body-tertiary">
        Made by
        <a class="text-body" href="https://roco-fernandez-p.web.app/">Roco
          Fernandez Pagella</a>
      </div>

    </footer>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
    <script src="/public/js/logoutFunction.js"></script>
    <script src="/public/js/authNavbar.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  </body>
